[
    {
        "text": "В моем первом",
        "start": 5.08,
        "end": 6.12
    },
    {
        "text": "повествовании,",
        "start": 7.12,
        "end": null
    },
    {
        "text": "Феофил,",
        "start": 7.12,
        "end": null
    },
    {
        "text": "я написал обо всем,",
        "start": 8.38,
        "end": 9.45
    },
    {
        "text": "что Иисус делал и чему Он",
        "start": 9.45,
        "end": 11.52
    },
    {
        "text": "учил от начала до того",
        "start": 11.78,
        "end": 13.92
    },
    {
        "text": "дня,",
        "start": 13.92,
        "end": 14.52
    },
    {
        "text": "когда,",
        "start": 15.52,
        "end": null
    },
    {
        "text": "дав через Святого Духа",
        "start": 15.52,
        "end": 15.72
    },
    {
        "text": "повеления избранным Им",
        "start": 16.72,
        "end": null
    },
    {
        "text": "апостолам,",
        "start": 16.72,
        "end": null
    },
    {
        "text": "Он вознесся на небеса.",
        "start": 16.72,
        "end": 20.82
    },
    {
        "text": "После Своего страдания Он",
        "start": 21.5,
        "end": 23.14
    },
    {
        "text": "представал перед этими",
        "start": 23.38,
        "end": 24.26
    },
    {
        "text": "людьми живым со многими",
        "start": 24.52,
        "end": 26.72
    },
    {
        "text": "доказательствами.",
        "start": 26.72,
        "end": 27.66
    },
    {
        "text": "Иисус являлся им в",
        "start": 28.28,
        "end": 29.78
    },
    {
        "text": "течение сорока дней и",
        "start": 29.78,
        "end": 32.02
    },
    {
        "text": "говорил о Божьем Царстве.",
        "start": 32.02,
        "end": 32.36
    },
    {
        "text": "Однажды,",
        "start": 33.36,
        "end": null
    },
    {
        "text": "обедая вместе с ними,",
        "start": 33.36,
        "end": 36.3
    },
    {
        "text": "Он велел им не покидать",
        "start": 37.3,
        "end": 38.14
    },
    {
        "text": "Иерусалима,",
        "start": 39.14,
        "end": null
    },
    {
        "text": "но ждать обещанного",
        "start": 39.54,
        "end": 40.9
    },
    {
        "text": "Отцом.",
        "start": 41.9,
        "end": null
    },
    {
        "text": "-",
        "start": 41.9,
        "end": null
    },
    {
        "text": "Это то,",
        "start": 41.88,
        "end": 42.2
    },
    {
        "text": "о чем вы слышали от Меня.",
        "start": 42.48,
        "end": 44.0
    },
    {
        "text": "Потому что Иоанн крестил",
        "start": 45.0,
        "end": 46.26
    },
    {
        "text": "водой,",
        "start": 46.26,
        "end": 46.9
    },
    {
        "text": "а вы через несколько дней",
        "start": 47.1,
        "end": 48.58
    },
    {
        "text": "будете крещены Святым",
        "start": 48.58,
        "end": 48.96
    },
    {
        "text": "Духом.",
        "start": 49.96,
        "end": null
    },
    {
        "text": "Когда ученики собрались",
        "start": 51.26,
        "end": 52.78
    },
    {
        "text": "вместе,",
        "start": 52.78,
        "end": 53.24
    },
    {
        "text": "они спросили Его:",
        "start": 53.38,
        "end": 54.26
    },
    {
        "text": "-",
        "start": 55.26,
        "end": null
    },
    {
        "text": "Господи,",
        "start": 55.76,
        "end": 56.84
    },
    {
        "text": "не настало ли время Тебе",
        "start": 57.0,
        "end": 58.16
    },
    {
        "text": "восстановить царство",
        "start": 58.5,
        "end": 59.2
    },
    {
        "text": "Израиля?",
        "start": 60.2,
        "end": null
    },
    {
        "text": "Он сказал им:",
        "start": 60.76,
        "end": 61.0
    },
    {
        "text": "-",
        "start": 62.0,
        "end": null
    },
    {
        "text": "Не ваше дело знать",
        "start": 62.4,
        "end": 63.82
    },
    {
        "text": "времена и сроки,",
        "start": 63.82,
        "end": 65.38
    },
    {
        "text": "которые Отец установил",
        "start": 66.38,
        "end": 67.24
    },
    {
        "text": "Своей властью.",
        "start": 68.24,
        "end": null
    },
    {
        "text": "Когда на вас сойдет",
        "start": 68.66,
        "end": 69.98
    },
    {
        "text": "Святой Дух,",
        "start": 70.98,
        "end": null
    },
    {
        "text": "вы получите силу и будете",
        "start": 70.98,
        "end": 70.46
    },
    {
        "text": "Моими свидетелями в",
        "start": 71.46,
        "end": null
    },
    {
        "text": "Иерусалиме,",
        "start": 71.46,
        "end": null
    },
    {
        "text": "по всей Иудее,",
        "start": 71.46,
        "end": null
    },
    {
        "text": "в Самарии и до края",
        "start": 71.46,
        "end": 72.98
    },
    {
        "text": "земли.",
        "start": 79.04,
        "end": 79.48
    },
    {
        "text": "Сказав это,",
        "start": 80.26,
        "end": 81.38
    },
    {
        "text": "Он на их глазах был",
        "start": 82.38,
        "end": 83.24
    },
    {
        "text": "поднят ввысь,",
        "start": 84.24,
        "end": null
    },
    {
        "text": "и облако скрыло Его от их",
        "start": 84.2,
        "end": 86.36
    },
    {
        "text": "взглядов.",
        "start": 86.36,
        "end": 86.79
    },
    {
        "text": "Они пристально смотрели в",
        "start": 86.79,
        "end": 88.94
    },
    {
        "text": "небо,",
        "start": 88.94,
        "end": 89.2
    },
    {
        "text": "пока Он поднимался,",
        "start": 89.44,
        "end": 90.56
    },
    {
        "text": "как вдруг рядом с ними",
        "start": 90.98,
        "end": 92.32
    },
    {
        "text": "оказались два человека в",
        "start": 92.32,
        "end": 94.0
    },
    {
        "text": "белых одеждах.",
        "start": 94.0,
        "end": 94.31
    },
    {
        "text": "-",
        "start": 95.31,
        "end": null
    },
    {
        "text": "Галилеяне,",
        "start": 95.31,
        "end": null
    },
    {
        "text": "-",
        "start": 95.31,
        "end": null
    },
    {
        "text": "сказали они,",
        "start": 96.56,
        "end": 96.94
    },
    {
        "text": "-",
        "start": 97.94,
        "end": null
    },
    {
        "text": "что вы стоите и смотрите",
        "start": 97.8,
        "end": 99.16
    },
    {
        "text": "в небо?",
        "start": 99.16,
        "end": 99.36
    },
    {
        "text": "Этот Иисус,",
        "start": 100.16,
        "end": 101.22
    },
    {
        "text": "Который был взят от вас в",
        "start": 102.22,
        "end": 102.74
    },
    {
        "text": "небеса,",
        "start": 102.74,
        "end": 103.52
    },
    {
        "text": "придет точно таким же",
        "start": 103.68,
        "end": 105.08
    },
    {
        "text": "образом,",
        "start": 105.08,
        "end": 105.6
    },
    {
        "text": "каким вы видели Его",
        "start": 106.06,
        "end": 107.04
    },
    {
        "text": "возносящимся.",
        "start": 108.04,
        "end": null
    },
    {
        "text": "После этого они",
        "start": 112.84,
        "end": 114.56
    },
    {
        "text": "возвратились в Иерусалим",
        "start": 115.56,
        "end": 115.44
    },
    {
        "text": "с горы,",
        "start": 116.2,
        "end": 116.56
    },
    {
        "text": "называемой Елеон,",
        "start": 117.56,
        "end": null
    },
    {
        "text": "которая находится на",
        "start": 118.8,
        "end": 119.78
    },
    {
        "text": "расстоянии субботнего",
        "start": 120.78,
        "end": 121.1
    },
    {
        "text": "пути от Иерусалима.",
        "start": 121.14,
        "end": 121.82
    },
    {
        "text": "Придя,",
        "start": 122.82,
        "end": null
    },
    {
        "text": "они поднялись в верхнюю",
        "start": 124.14,
        "end": 124.92
    },
    {
        "text": "комнату и там оставались",
        "start": 125.92,
        "end": 127.74
    },
    {
        "text": "-",
        "start": 128.74,
        "end": null
    },
    {
        "text": "Петр и Иоанн,",
        "start": 127.94,
        "end": 130.32
    },
    {
        "text": "Иаков и Андрей,",
        "start": 131.32,
        "end": 131.08
    },
    {
        "text": "Филипп и Фома,",
        "start": 131.3,
        "end": 132.48
    },
    {
        "text": "Варфоломей и Матфей,",
        "start": 133.48,
        "end": 134.18
    },
    {
        "text": "Иаков сын Алфея,",
        "start": 135.18,
        "end": 135.68
    },
    {
        "text": "Симон Зилот и Иуда,",
        "start": 136.58,
        "end": 138.0
    },
    {
        "text": "сын Иакова.",
        "start": 139.0,
        "end": null
    },
    {
        "text": "Все они постоянно",
        "start": 140.1,
        "end": 140.86
    },
    {
        "text": "собирались для молитвы.",
        "start": 141.86,
        "end": null
    },
    {
        "text": "С ними были и несколько",
        "start": 143.42,
        "end": 144.6
    },
    {
        "text": "женщин,",
        "start": 144.6,
        "end": 145.52
    },
    {
        "text": "а также мать Иисуса Мария",
        "start": 145.62,
        "end": 147.52
    },
    {
        "text": "и Его братья.",
        "start": 147.62,
        "end": 148.76
    },
    {
        "text": "В те дни Петр встал",
        "start": 149.46,
        "end": 151.58
    },
    {
        "text": "посреди верующих (в",
        "start": 152.58,
        "end": null
    },
    {
        "text": "собрании было около ста",
        "start": 153.3,
        "end": 154.5
    },
    {
        "text": "двадцати человек)",
        "start": 155.5,
        "end": null
    },
    {
        "text": "и сказал:",
        "start": 155.7,
        "end": 156.16
    },
    {
        "text": "-",
        "start": 157.16,
        "end": null
    },
    {
        "text": "Братья,",
        "start": 157.16,
        "end": null
    },
    {
        "text": "должно было исполниться",
        "start": 157.16,
        "end": 159.54
    },
    {
        "text": "Писание,",
        "start": 160.54,
        "end": null
    },
    {
        "text": "где Святой Дух предсказал",
        "start": 160.32,
        "end": 162.06
    },
    {
        "text": "через Давида об Иуде,",
        "start": 162.06,
        "end": 163.14
    },
    {
        "text": "который вел тех,",
        "start": 164.26,
        "end": 165.3
    },
    {
        "text": "кто шел арестовать",
        "start": 165.36,
        "end": 166.39
    },
    {
        "text": "Иисуса.",
        "start": 166.39,
        "end": 166.94
    },
    {
        "text": "Иуда был одним из нас и",
        "start": 167.94,
        "end": 170.18
    },
    {
        "text": "принимал участие в",
        "start": 170.18,
        "end": 171.4
    },
    {
        "text": "служении,",
        "start": 172.4,
        "end": null
    },
    {
        "text": "которое мы совершаем.",
        "start": 172.4,
        "end": null
    },
    {
        "text": "На деньги,",
        "start": 172.76,
        "end": 172.98
    },
    {
        "text": "полученные за совершенное",
        "start": 173.98,
        "end": 174.16
    },
    {
        "text": "им зло,",
        "start": 175.16,
        "end": null
    },
    {
        "text": "он купил поле,",
        "start": 175.94,
        "end": 177.12
    },
    {
        "text": "но,",
        "start": 178.12,
        "end": null
    },
    {
        "text": "упав вниз головой,",
        "start": 177.32,
        "end": 178.64
    },
    {
        "text": "он разбился,",
        "start": 178.76,
        "end": 178.88
    },
    {
        "text": "и его внутренности",
        "start": 179.48,
        "end": 180.74
    },
    {
        "text": "вывалились наружу.",
        "start": 180.94,
        "end": 182.3
    },
    {
        "text": "Об этом узнали все жители",
        "start": 182.58,
        "end": 183.98
    },
    {
        "text": "Иерусалима и прозвали",
        "start": 184.98,
        "end": 185.94
    },
    {
        "text": "поле,",
        "start": 186.94,
        "end": null
    },
    {
        "text": "на своем языке Акелдама,",
        "start": 186.18,
        "end": 187.64
    },
    {
        "text": "то есть Поле Крови.",
        "start": 188.98,
        "end": 189.22
    },
    {
        "text": "Ведь в книге Псалмов",
        "start": 190.76,
        "end": 191.46
    },
    {
        "text": "написано:",
        "start": 192.46,
        "end": null
    },
    {
        "text": "«Пусть его жилище будет в",
        "start": 192.46,
        "end": 195.06
    },
    {
        "text": "запустении,",
        "start": 196.06,
        "end": null
    },
    {
        "text": "пусть никто там больше не",
        "start": 196.32,
        "end": 197.98
    },
    {
        "text": "живет» и «Пусть другой",
        "start": 198.98,
        "end": 200.14
    },
    {
        "text": "займет его положение».",
        "start": 200.14,
        "end": 201.02
    },
    {
        "text": "-",
        "start": 202.02,
        "end": null
    },
    {
        "text": "Поэтому нам необходимо",
        "start": 202.36,
        "end": 203.74
    },
    {
        "text": "выбрать одного из тех",
        "start": 203.74,
        "end": 205.28
    },
    {
        "text": "людей,",
        "start": 205.28,
        "end": 205.8
    },
    {
        "text": "кто сопровождал нас все",
        "start": 206.14,
        "end": 207.36
    },
    {
        "text": "то время,",
        "start": 207.7,
        "end": 208.32
    },
    {
        "text": "когда Господь Иисус был",
        "start": 208.76,
        "end": 210.26
    },
    {
        "text": "среди нас,",
        "start": 210.26,
        "end": 211.18
    },
    {
        "text": "начиная от крещения",
        "start": 211.5,
        "end": 211.94
    },
    {
        "text": "Иоанна и до того дня,",
        "start": 212.94,
        "end": 214.48
    },
    {
        "text": "когда Иисус был взят от",
        "start": 214.62,
        "end": 216.46
    },
    {
        "text": "нас.",
        "start": 216.46,
        "end": 216.78
    },
    {
        "text": "Он также должен быть,",
        "start": 217.78,
        "end": null
    },
    {
        "text": "как и мы,",
        "start": 217.7,
        "end": 218.52
    },
    {
        "text": "свидетелем Его",
        "start": 219.22,
        "end": 219.96
    },
    {
        "text": "воскресения.",
        "start": 220.96,
        "end": null
    },
    {
        "text": "Предложили двоих:",
        "start": 220.96,
        "end": null
    },
    {
        "text": "Иосифа,",
        "start": 223.24,
        "end": 223.98
    },
    {
        "text": "которого еще называют",
        "start": 223.98,
        "end": 225.08
    },
    {
        "text": "Варсавой,",
        "start": 226.08,
        "end": null
    },
    {
        "text": "или Иустом,",
        "start": 225.8,
        "end": 226.24
    },
    {
        "text": "и Матфия.",
        "start": 227.22,
        "end": 227.44
    },
    {
        "text": "И помолились:",
        "start": 228.58,
        "end": 228.78
    },
    {
        "text": "-",
        "start": 229.78,
        "end": null
    },
    {
        "text": "Господи,",
        "start": 230.04,
        "end": 230.74
    },
    {
        "text": "Ты знаешь сердце каждого;",
        "start": 231.74,
        "end": 232.0
    },
    {
        "text": "укажи на одного из этих",
        "start": 233.0,
        "end": 234.35
    },
    {
        "text": "двоих,",
        "start": 234.35,
        "end": 235.1
    },
    {
        "text": "кого Ты избрал на это",
        "start": 235.12,
        "end": 236.62
    },
    {
        "text": "служение:",
        "start": 237.62,
        "end": null
    },
    {
        "text": "быть Твоим апостолом",
        "start": 237.62,
        "end": null
    },
    {
        "text": "вместо Иуды,",
        "start": 239.7,
        "end": 240.38
    },
    {
        "text": "который ушел,",
        "start": 241.34,
        "end": 241.64
    },
    {
        "text": "куда ему суждено.",
        "start": 242.26,
        "end": 243.5
    },
    {
        "text": "Потом они бросили жребий,",
        "start": 244.0,
        "end": 245.78
    },
    {
        "text": "и жребий выпал на Матфия,",
        "start": 246.32,
        "end": 247.0
    },
    {
        "text": "который и был причислен к",
        "start": 248.6,
        "end": 250.18
    },
    {
        "text": "одиннадцати апостолам.",
        "start": 251.18,
        "end": null
    }
]